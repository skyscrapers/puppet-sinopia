[Unit]
Description=Sinopia NPM Proxy/Cache Server
After=syslog.target network.target
[Service]
Type=simple
User=<%= @daemon_user %>
ExecStart=<%= @install_path %>/node_modules/sinopia/bin/sinopia -c <%= @install_path %>/config.yaml
Restart=always
RestartSec=30
WorkingDirectory=<%= @install_path %>
[Install]
WantedBy=multi-user.target
